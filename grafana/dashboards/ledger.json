{
  "uid": "ledger-main",
  "title": "Ledger Overview",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_latency_seconds_bucket[5m])) by (le))"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Latency p50",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(app_request_latency_seconds_bucket[5m])) by (le))"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "sum(rate(app_errors_total[1m]))"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Latency p99",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(app_request_latency_seconds_bucket[5m])) by (le))"
        }
      ],
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Frauds Detected",
      "targets": [
        {
          "expr": "sum(rate(fraud_detected_total[5m]))"
        }
      ],
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
    },
    {
      "type": "stat",
      "title": "Total Balance",
      "targets": [
        {
          "expr": "accounts_total_balance"
        }
      ],
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
    }
  ]
}
